int Plo(int a,int b, int c)
{
	int Pl;
	Pl = sprt((((a + b + c)/2)*((a + b + c)/2) - a)*(((a + b + c)/2) - b)*(((a + b + c)/2) - c));
	return (Pl);
}

int main(int argc, char *argv[]) {
	int a = 3,b = 5, c = 8,Pr,Pl;
	Pr = Per(a,b,c);
	printf("%d", Pr);
	Pl = Plo(a,b,c);
	printf("%d", Pl);
	
	return 0;
}
